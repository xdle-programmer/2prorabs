                                .static-page__info-block-text-small ИНН: 00407201710214
                                .static-page__info-block-text-small УГНС по Свердловскому р-ну г. Бишкек, код 003
                                .static-page__info-block-text-small р/счет: 1299003131324919 (KGS)
                                .static-page__info-block-text-small Банк: ОАО «РСК Банк»
                                .static-page__info-block-text-small БИК: 129001


                            .static-page__info-block-desc-img-wrapper
                                img(src='/local/templates/stroygip/ts/images/static-images/contract.svg').static-page__info-block-desc-img

        include ../blocks/footer/footer